<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="av"
    x:Class="calculator.View.Bottons">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Grid.Row="0"
                 Text="{Binding Calculationarea}"
                 IsReadOnly="True"
                 Height="40"
                 Margin="5"
                 HorizontalContentAlignment="Right"/>

        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="1" Command="{Binding OneCommand}"/>
            <Button Grid.Column="1" Content="2" Command="{Binding TwoCommand}"/>
            <Button Grid.Column="2" Content="3" Command="{Binding ThreeCommand}"/>
            <Button Grid.Column="3" Content="➕" Command="{Binding PlusCommand}"/>
        </Grid>

        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="4" Command="{Binding FourCommand}"/>
            <Button Grid.Column="1" Content="5" Command="{Binding FiveCommand}"/>
            <Button Grid.Column="2" Content="6" Command="{Binding SixCommand}"/>
            <Button Grid.Column="3" Content="➖" Command="{Binding MinusCommand}"/>
        </Grid>

        <Grid Grid.Row="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="7" Command="{Binding SevenCommand}"/>
            <Button Grid.Column="1" Content="8" Command="{Binding EightCommand}"/>
            <Button Grid.Column="2" Content="9" Command="{Binding NineCommand}"/>
            <Button Grid.Column="3" Content="✖️" Command="{Binding MultiplicationCommand}"/>
        </Grid>

        <Grid Grid.Row="4" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="C" Command="{Binding ClearCommand}"/>
            <Button Grid.Column="1" Content="0" Command="{Binding ZeroCommand}"/>
            <Button Grid.Column="2" Content="🟰" Command="{Binding EqualsCommand}"/>
            <Button Grid.Column="3" Content="➗" Command="{Binding DivisionCommand}"/>
        </Grid>
    </Grid>
</UserControl>
